<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeRate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004D40"
    tools:context="com.example.pranshu.hackathonproject.RateUsActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/pranshu" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:text="Rate this app."
        android:textAlignment="center"
        android:textColor="#C8E6C9"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textStyle="bold" />

    <info.hoang8f.widget.FButton
        android:id="@+id/rateBut"
        style="?android:textAppearanceMedium"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textViewRate"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="70dp"
        android:onClick="rateThisApp"
        android:text="Submit"
        android:textColor="#fff"
        android:textStyle="bold"
        fbutton:buttonColor="#00695C"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar"
        android:text="3.5"
        android:textAlignment="center"
        android:textColor="#BF360C"
        android:textSize="15dp"
        android:textStyle="bold" />

</RelativeLayout>
